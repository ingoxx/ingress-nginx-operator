worker_processes  4;
#error_log  /var/log/nginx/error.log notice;
daemon off;
pid        /var/run/nginx.pid;
worker_rlimit_nofile 1047552;
worker_shutdown_timeout 240s ;

events {
        multi_accept        on;
        worker_connections  16384;
        use                 epoll;
}

### stream
{{ if .Annotations.EnableStream.EnableStream }}
{{ range $bk := .Annotations.EnableStream.StreamBackendList }}
stream {
    server {
        listen $bk.Port;
        proxy_pass $bk.Name:$bk.Port;
    }
}
{{ end }}
{{ end }}

# __STREAM_INSERT_HERE__

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    proxy_headers_hash_max_size     2048;
    proxy_headers_hash_bucket_size  128;
    ### limit req
    {{ if .Annotations.EnableReqLimit.EnableRequestLimit }}
    limit_req_zone {{ .Annotations.EnableReqLimit.SetLimitConfig }};
    {{ end }}
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;
    error_log  /var/log/nginx/error.log notice;
    sendfile        on;
    #tcp_nopush     on;

    keepalive_timeout  65;

    # gzip  on;

    include /etc/nginx/conf.d/*.conf;
}

